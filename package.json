{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/server/index.ts",
    "build": "bun build ./src/client/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/server/index.ts"
  },
  "dependencies": {
    "@trpc/client": "^11.7.2",
    "@trpc/server": "^11.7.2",
    "antd": "^6.0.1",
    "better-auth": "^1.4.5",
    "mongodb": "^7.0.0",
    "react": "^19",
    "react-dom": "^19",
    "react-router": "^7.10.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  }
}
